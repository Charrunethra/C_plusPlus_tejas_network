//Area and perimeter of a circle

#include <iostream>
#include <cmath>
using namespace std;

int main()
{
    float pi,radius,area,perimeter;
    pi = 3.14;
    cout<<endl<<"Enter the radius of the circle: ";
    cin>>radius;
    area = pi*pow(radius,2);// pi*pow(radius,2) or pi*radius*radius
    perimeter = 2*pi*radius;
    cout<<"Area : "<<area<<endl;
    cout<<"Perimeter : "<<perimeter<<endl;
    return 0;
}
