//Sum of all even and odd numbers from 1 to 100
#include <iostream>

using namespace std;

int main()
{
    int  max, even = 0, odd = 0;
    cout<<"Enter max limit for odd and even numbers : ";
    cin>>max;
    for(int num=1;num<=max;i++){
        if(num%2 == 0)
        even+=num;
        else
        odd+=num;
    }
    cout<<"The sum of all even nos upto "<<max<<" is "<<even<<endl;
    cout<<"The sum of all odd nos upto "<<max<<" is "<<odd<<endl;
    return 0;
}
